<%  %>
<h1>Welcome <%= @user.username %> </h1>

<% if @message %> 

<p class="color">You sent <b><%= @sent_to_users.map{ |x| x.username }.join(", ") %></b></p>
<h4>The Updated Message: <%= @message.message %></h4>
<% end %>
<p>Send message to: </p>
<% if Helpers.is_logged_in?(session) %>


<% User.all.each do |x| %> 
<% unless x.id == @user.id %>
<form action="/message/send" method="POST">

<input type="checkbox" name="user[id][]" id="<%= x.id %>" value="<%= x.id %>"><%= x.username %><br>
<% end %>
<% end %>
<br><br>
<input type="checkbox" name="author" value="<%= @user.username %>" checked >From <%=@user.username %><br>
<textarea class = "content" name="message" rows="5" cols="15">

</textarea> 
<input type="submit" id="submit" value="send it">  
</form>
<h3><a href="/user/logout">Log out</a></h3>  
<% else %>
<h4>LOG IN PLEASE</h4>
<% end %>



